<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TX.Resources.VisualResources">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/VisualResources/SolidColorDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TXButtonStyle"
           x:FieldModifier="Public"
           TargetType="Button"
           BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="FontWeight"  Value="Medium" />
        <Setter Property="Width" Value="150"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Foreground" Value="{ThemeResource SolidSystemAltMediumHighColorBrush}" />
    </Style>
    
    

</ResourceDictionary>
