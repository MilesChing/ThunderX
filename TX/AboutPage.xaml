<local:TXPage x:Class="TX.AboutPage"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:local="using:TX"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              mc:Ignorable="d"
              xmlns:control="using:Microsoft.Toolkit.Uwp.UI.Controls"
              Background="{StaticResource TXBackgroundAcrylicBrush}">

    <Page.Resources>
        <Style x:Key="ContactDetailsGridStyle"
               TargetType="Grid">
            <Style.Setters>
                <Setter Property="Background" Value="{StaticResource SolidSystemAccentColorBrush}"/>
                <Setter Property="CornerRadius" Value="2"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
            </Style.Setters>
        </Style>
    </Page.Resources>
    
    <ScrollViewer x:Name="scrollViewer"
                  HorizontalScrollMode="Disabled"
                  HorizontalAlignment="Left"
                  VerticalScrollBarVisibility="Hidden">
        <StackPanel x:Name="stack"
                    Orientation="Vertical"
                    MaxWidth="600"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Margin="28,20,28,0">
            <TextBlock Style="{StaticResource TXTitle}"
                       x:Uid="AboutPage_Title"/>
            <Border Style="{StaticResource TXBigBorder}"/>
            <StackPanel Orientation="Horizontal">
                <control:DropShadowPanel BlurRadius="4" 
                                         ShadowOpacity="0.6" 
                                         OffsetY="1"
                                         Margin="0,0,16,0">
                    <Grid Background="Black"
                          CornerRadius="2">
                        <Image Width="50" Height="50" Source="/Assets/LargeTile.png" />
                    </Grid>
                </control:DropShadowPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Style="{StaticResource TXSubTitle}"
                               Text="Thunder X"/>
                    <Border Height="8"/>
                    <control:DropShadowPanel  BlurRadius="4"
                                              ShadowOpacity="0.4">
                        <Grid Background="{StaticResource SolidSystemAccentColorBrush}"
                              CornerRadius="2"
                              Padding="4,2,4,2">
                            <TextBlock x:Name="VersionNameBlock"
                                       FontWeight="Bold"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{StaticResource SolidSystemAltMediumHighColorBrush}"/>
                        </Grid>
                    </control:DropShadowPanel>
                </StackPanel>
            </StackPanel>
            <Border Style="{StaticResource TXBigBorder}"/>
            <TextBlock Style="{StaticResource TXSubTitle}"
                       x:Uid="AboutPage_SubTitle_Guide"/>
            <Border Style="{StaticResource TXBorder}"/>
            <HyperlinkButton Foreground="{StaticResource SolidSystemAccentColorBrush}" 
                             x:Uid="AboutPage_GuideText_Guide"
                             Click="HyperlinkButton_Click"/>
            <Border Style="{StaticResource TXBorder}"/>
            <TextBlock Style="{StaticResource TXSubTitle}"
                       x:Uid="AboutPage_SubTitle_Version"/>
            <Border Style="{StaticResource TXBorder}"/>
            <!--显示给试用版的界面-->
            <StackPanel x:Name="TrialPanel"
                        Visibility="Collapsed">
                <TextBlock Style="{StaticResource TXPlainText}"
                           x:Uid="AboutPage_GuideText_Trail"/>
                <Border Style="{StaticResource TXBorder}"/>
                <Button Style="{StaticResource TXAccentButtonStyle}"
                        x:Name="PurchaseButton"
                        x:Uid="AboutPage_Button_Trail"
                        Click="PurchaseButton_Click"/>
            </StackPanel>
            <!--显示给完整版的界面-->
            <StackPanel x:Name="ActivePanel"
                        Visibility="Collapsed">
                <TextBlock Style="{StaticResource TXPlainText}"
                           x:Uid="AboutPage_GuideText_Active"/>
            </StackPanel>
            <Border Style="{StaticResource TXBigBorder}"/>
            <TextBlock Style="{StaticResource TXSubTitle}"
                       x:Uid="AboutPage_SubTitle_Review"/>
            <Border Style="{StaticResource TXBorder}"/>
            <TextBlock Style="{StaticResource TXPlainText}"
                       x:Uid="AboutPage_GuideText_Review"/>
            <Border Style="{StaticResource TXBorder}" />
            <RatingControl HorizontalAlignment="Left"
                           PlaceholderValue="5"
                           Foreground="{StaticResource SolidSystemAccentColorLight1Brush}"
                           Tapped="RatingControl_Tapped"/>
            <Border Style="{StaticResource TXBigBorder}"/>
            <TextBlock Style="{StaticResource TXSubTitle}"
                       x:Uid="AboutPage_SubTitle_AboutDeveloper"/>
            <Border Style="{StaticResource TXBorder}"/>
            <TextBlock Style="{StaticResource TXSubTitle}"
                       FontStyle="Italic"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource SolidSystemAccentColorBrush}"
                       Opacity="1"
                       Text="Miles Ching"/>
            <Border Style="{StaticResource TXBorder}"/>
            <TextBlock Style="{StaticResource TXPlainText}"
                       Text="眼睛望着同一片天空，&#13;心敲击着暮色的鼓。"/>
            <Border Style="{StaticResource TXHorizontalLine}"/>

            <Grid Style="{StaticResource ContactDetailsGridStyle}">
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                           Text="qinzhengrui@live.cn"
                           FontFamily="Consolas"
                           Foreground="{StaticResource SolidSystemAltMediumHighColorBrush}"/>
            </Grid>
            <Grid Style="{StaticResource ContactDetailsGridStyle}">
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                           Text="https://github.com/MilesChing"
                           FontFamily="Consolas"
                           Foreground="{StaticResource SolidSystemAltMediumHighColorBrush}"/>
            </Grid>
            <Grid Style="{StaticResource ContactDetailsGridStyle}">
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                           Text="Weibo @MilesChing"
                           FontFamily="Consolas"
                           Foreground="{StaticResource SolidSystemAltMediumHighColorBrush}"/>
            </Grid>
            <Grid Style="{StaticResource ContactDetailsGridStyle}">
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                           Text="https://milesching.github.io/"
                           FontFamily="Consolas"
                           Foreground="{StaticResource SolidSystemAltMediumHighColorBrush}"/>
            </Grid>
            <Border Style="{StaticResource TXBigBorder}"/>
            <Border Style="{StaticResource TXBigBorder}" />
            <Border Style="{StaticResource TXBigBorder}" />
        </StackPanel>
    </ScrollViewer>
</local:TXPage>
