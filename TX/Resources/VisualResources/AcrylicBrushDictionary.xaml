<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TX.Resources.VisualResources">

    <AcrylicBrush x:Key="TXBackgroundAcrylicBrush"
                  BackgroundSource="HostBackdrop"
                  TintColor="{ThemeResource TXBackgroundAcrylicColor}"
                  TintOpacity="0.9"
                  FallbackColor="{ThemeResource TXBackgroundAcrylicColor}"/>

    <AcrylicBrush x:Key="TXControlAcrylicBrush"
                          BackgroundSource="Backdrop"
                          TintColor="{ThemeResource TXBackgroundAcrylicColor}"
                          TintOpacity="0.1"
                          FallbackColor="{ThemeResource TXBackgroundAcrylicColor}" />
</ResourceDictionary>
