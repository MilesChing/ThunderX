<Page x:Class="TX.NewTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TX"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource TXBackgroundAcrylicBrush}">
    <ScrollViewer x:Name="scrollViewer"
                  VerticalAlignment="Top"
                  HorizontalScrollMode="Disabled"
                  HorizontalAlignment="Left"
                  VerticalScrollBarVisibility="Hidden">
        <Grid MaxWidth="700">
            <StackPanel x:Name="stack"
                        Orientation="Vertical"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Margin="28,20,28,0">
                <Border Width="800" />
                <TextBlock Style="{ThemeResource SubheaderTextBlockStyle}"
                           x:Uid="NewTaskPage_Title" />
                <Border Style="{ThemeResource TXBorder}" />
                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}"
                           x:Uid="NewTaskPage_Subtitle1" />
                <Border Style="{ThemeResource TXBorder}" />
                <TextBlock TextWrapping="Wrap"
                           x:Uid="NewTaskPage_GuideText1" />
                <Border Style="{ThemeResource TXBorder}" />
                <TextBox x:Name="UrlBox"
                         TextChanged="UrlBox_TextChanged" />
                <Border Style="{ThemeResource TXBorder}" />
                <TextBlock x:Uid="NewTaskPage_Subtitle2"
                           Style="{ThemeResource SubtitleTextBlockStyle}" />
                <Border Style="{ThemeResource TXBorder}" />
                <Grid>
                    <TextBlock x:Name="OurAdviceBlock"
                               Style="{ThemeResource BaseTextBlockStyle}"
                               Foreground="{ThemeResource SystemControlForegroundAccentBrush}" />
                    <TextBox x:Name="RenameBox"
                             Visibility="Collapsed" />
                </Grid>
                <Border Style="{ThemeResource TXBorder}" />
                <CheckBox x:Name="NeedRenameButton"
                          x:Uid="NewTaskPage_NeedRenameButton"
                          Checked="NeedRenameButton_ValueChanged"
                          Unchecked="NeedRenameButton_ValueChanged" />
                <Border Style="{ThemeResource TXBorder}" />
                <TextBlock x:Uid="NewTaskPage_Subtitle3"
                           Style="{ThemeResource SubtitleTextBlockStyle}" />
                <Border Style="{ThemeResource TXBorder}" />
                <TextBlock TextWrapping="Wrap"
                           x:Uid="NewTaskPage_GuideText2" />
                <Border Style="{ThemeResource TXBorder}" />
                <Slider x:Name="ThreadNumSlider"
                        Minimum="1"
                        Maximum="256" />
                <Border Style="{ThemeResource TXBorder}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="SubmitButton"
                            Width="150"
                            Height="40"
                            Style="{ThemeResource TXButtonStyle}"
                            x:Uid="NewTaskPage_SubmitButton"
                            IsEnabled="False"
                            Click="SubmitButton_Click" />
                </Grid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
