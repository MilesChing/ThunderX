<Page
    x:Class="TX.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:control="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource TXBackgroundAcrylicBrush}">

    <ScrollViewer x:Name="scrollViewer"
                  HorizontalScrollMode="Disabled"
                  HorizontalAlignment="Left"
                  VerticalScrollBarVisibility="Hidden">
        <StackPanel x:Name="stack"
                    Orientation="Vertical"
                    MaxWidth="600"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Margin="28,20,28,0">
            <TextBlock Style="{ThemeResource TXTitle}"
                       x:Uid="AboutPage_Title"/>
            <Border Style="{StaticResource TXBigBorder}"/>
            <TextBlock Style="{ThemeResource TXSubTitle}"
                       Text="Thunder X"/>
            <Border Style="{StaticResource TXBorder}"/>
            <control:DropShadowPanel
                BlurRadius="4"
                ShadowOpacity="0.4">
                <Grid Background="{ThemeResource SolidSystemAccentColorBrush}"
                      CornerRadius="2"
                      Padding="2">
                    <TextBlock x:Name="VersionNameBlock"
                               Style="{ThemeResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource SolidSystemAltMediumHighColorBrush}"/>
                </Grid>
            </control:DropShadowPanel>
            <Border Style="{StaticResource TXBorder}"/>
            <!--显示给试用版的界面-->
            <StackPanel x:Name="TrialPanel"
                        Visibility="Collapsed">
                <TextBlock Style="{ThemeResource TXPlainText}"
                           x:Uid="AboutPage_GuideText_Trail"/>
                <Border Style="{StaticResource TXBorder}"/>
                <Button Style="{ThemeResource TXButtonStyle}"
                        x:Name="PurchaseButton"
                        x:Uid="AboutPage_Button_Trail"
                        Click="PurchaseButton_Click"/>
            </StackPanel>
            <!--显示给完整版的界面-->
            <StackPanel x:Name="ActivePanel"
                        Visibility="Collapsed">
                <TextBlock Style="{ThemeResource TXPlainText}"
                           x:Uid="AboutPage_GuideText_Active"/>
            </StackPanel>
            <Border Style="{StaticResource TXBorder}"/>
            <TextBlock TextWrapping="Wrap" Style="{ThemeResource TXPlainText}"
                       x:Uid="AboutPage_GuideText_Review"/>
            <Border Style="{ThemeResource TXBorder}" />
            <RatingControl HorizontalAlignment="Left"
                           PlaceholderValue="5"
                           Foreground="{ThemeResource SolidSystemAccentColorLight1Brush}"
                           Tapped="RatingControl_Tapped"/>
            <Border Style="{StaticResource TXBigBorder}"/>
            <TextBlock Style="{StaticResource TXSubTitle}"
                       x:Uid="AboutPage_SubTitle_AboutDeveloper"/>
            <Border Style="{StaticResource TXBorder}"/>
            <TextBlock Style="{StaticResource TXPlainText}"
                       FontStyle="Italic"
                       FontWeight="SemiBold"
                       Foreground="{ThemeResource SolidSystemAccentColorBrush}"
                       Text="Miles Ching"/>
            <Border Style="{StaticResource TXBorder}"/>
            <TextBlock Style="{StaticResource TXPlainText}"
                       x:Uid="AboutPage_GuideText_AboutDeveloper"/>
            <Border Style="{StaticResource TXBigBorder}"/>
            <Button x:Name="GithubButton"
                    Style="{ThemeResource TXButtonStyle}"
                    x:Uid="AboutPage_Button_Github"
                    Click="GithubButton_Click"/>
            <Border Style="{ThemeResource TXBigBorder}" />
            <Border Style="{ThemeResource TXBigBorder}" />
        </StackPanel>
    </ScrollViewer>
</Page>
